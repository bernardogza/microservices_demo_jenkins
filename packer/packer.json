{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-80861296",
    "instance_type": "t2.medium",
    "ssh_username": "ubuntu",
    "ami_name": "sockshop-on-nomad {{timestamp}}",
    "ami_description": "Sockshop with Nomad and Consul",
    "ami_groups": ["all"],
    "tags": {
      "owner": "HashiCorp",
      "Base_AMI_ID": "{{ .SourceAMI }}",
      "Base_AMI_Name": "{{ .SourceAMIName }}"
    }
  }],
  "provisioners":  [
  {
    "type": "shell",
    "inline": [
      "sudo mkdir /ops",
      "sudo chmod 777 /ops"
    ]
  },
  {
    "type": "file",
    "source": "../config",
    "destination": "/ops"
  },
  {
    "type": "file",
    "source": "../jobs",
    "destination": "/ops"
  },
  {
    "type": "file",
    "source": "../scripts",
    "destination": "/ops"
  },
  {
    "type": "shell",
    "script": "../scripts/setup.sh"
  }
  ]
}
